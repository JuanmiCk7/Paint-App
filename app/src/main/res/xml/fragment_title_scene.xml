<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/clickOnMe"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/pingu"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="176dp"
            motion:layout_constraintTop_toBottomOf="@+id/button" />
        <Constraint
            android:layout_marginEnd="152dp"
            android:layout_height="129dp"
            android:layout_marginRight="152dp"
            android:layout_marginBottom="44dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="105dp"
            android:id="@+id/pingu" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/paint"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/button"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_editor_absoluteY="272dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="161dp"
            motion:layout_constraintBottom_toTopOf="@+id/clickOnMe"
            android:layout_width="wrap_content"
            android:id="@+id/button"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end" />
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end" />
</MotionScene>